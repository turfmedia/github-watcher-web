%section.main
  .row.padding
    .swap-left
      = form_for([@project, @project.search_items.build]) do |f|
        .five.columns.search
          .form-search
            %i.fa.fa-search
            = f.text_field :topic, class: "search-box", placeholder: "Topic..."
        .three.columns.tabs
          = f.select :language, options_for_select([["Language", ""], 'ruby', 'go', 'javascript', 'python', 'rust' , 'java'])
        .three.columns.tabs
          = f.submit "Add", class: "button-primary"
    .swap-right
      .five.columns.tabs
        %input#tab1{:checked => "checked", "data-target" => "#searches", :name => "tabs", :type => "radio"}/
        %label{:for => "tab1"} Search
        %input#tab2{"data-target" => "#saved", :name => "tabs", :type => "radio"}/
        %label{:for => "tab2"} Saved
        %input#tab3{"data-target" => "#deleted", :name => "tabs", :type => "radio"}/
        %label{:for => "tab3"} Deleted
  .row
    .twelve.columns.section-content
      %section#searches.content-data
        = render 'searches'
      %section#saved.content-data
        = render 'saved'
      %section#deleted.content-data
        = render 'deleted'
